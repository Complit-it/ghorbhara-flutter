    "version": "0.2.0",
    "configurations": [
    {
        "name": "Flutter",
        "type": "dart",
        "request": "launch",
        "program": "lib/main.dart"
    },
        {
            "name": "Ghorbhara",
            "request": "launch",
            "type": "dart"
        },
        //added below two objects to run app on multiple devices in debug mode at once
        {
            "name" : "AndroidMa",
            "request":"launch",
            "type":"dart",
            "deviceId": "ZT4LPB79KJKBKVPN"
        },
        //this as well
        {
            "name" : "AndroidMy",
            "request":"launch",
            "type":"dart",
            "deviceId": "1B16171000000619"
        },
        //these two below objects were here by default, I commented it out following the tutorial to connect two devices at once
        {
            "name": "Ghorbhara (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "Ghorbhara (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ],
    //added this for the same reason above
    "compounds": [
        {
            "name": "All Devices",
            "configurations": ["AndroidMa", "AndroidMy"]
        }
    ]
}